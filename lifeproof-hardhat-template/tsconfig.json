{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "outDir": "./dist"
  },
  "include": ["hardhat.config.ts", "deploy/**/*.ts", "tasks/**/*.ts", "test/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}





